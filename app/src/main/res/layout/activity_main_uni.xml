<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="10dp"
    tools:context=".MainUni">

    <TextView
        android:id="@+id/uniOtsikko"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="@string/otsikkoUni"
        android:textSize="15sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/uniNukuttu"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/uniOtsikko"
        android:layout_marginTop="20dp"
        android:textSize="20sp"/>

    <TextView
        android:id="@+id/uniOhje"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/uniNukuttu"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:text="@string/uniohje"
        android:textSize="20sp" />

    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_below="@id/uniOhje"
        android:id="@+id/uniNukuttuOhje"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/uniAikaH"
            android:gravity="center"
            android:hint="0"
            android:textSize="50sp"
            android:inputType="number"
            android:layout_width="97.5dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/uniOhje1"
            android:gravity="center"
            android:textSize="50sp"
            android:text="h"
            android:layout_width="97.5dp"
            android:layout_height="80dp"/>

        <EditText
            android:id="@+id/uniAikaMin"
            android:gravity="center"
            android:hint="0"
            android:textSize="50sp"
            android:inputType="number"
            android:layout_width="97.5dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/uniOhje2"
            android:gravity="center"
            android:textSize="50sp"
            android:text="min"
            android:layout_width="97.5dp"
            android:layout_height="80dp"/>

    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/uniTavoiteOhje"
        android:layout_below="@id/uniNukuttuOhje"
        android:layout_marginTop="40dp"
        android:textSize="20sp"
        android:text="@string/unitavoiteohje"
        android:layout_centerHorizontal="true"/>
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/uniTavoite"
        android:layout_below="@id/uniTavoiteOhje"
        android:layout_centerHorizontal="true"
        android:orientation="horizontal"
        android:layout_marginTop="20dp">

        <EditText
            android:id="@+id/uniAikaHb"
            android:gravity="center"
            android:textSize="50sp"
            android:text="8"
            android:inputType="number"
            android:layout_width="97.5dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/uniOhje1b"
            android:gravity="center"
            android:textSize="50sp"
            android:text="h"
            android:layout_width="97.5dp"
            android:layout_height="80dp"/>

        <EditText
            android:id="@+id/uniAikaMinb"
            android:gravity="center"
            android:textSize="50sp"
            android:text="0"
            android:inputType="number"
            android:layout_width="97.5dp"
            android:layout_height="80dp" />

        <TextView
            android:id="@+id/uniOhje2b"
            android:gravity="center"
            android:textSize="50sp"
            android:text="min"
            android:layout_width="97.5dp"
            android:layout_height="80dp"/>

    </LinearLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tallennaUni"
        android:layout_below="@id/uniTavoite"
        android:text="@string/tallenna1"
        android:paddingVertical="15dp"
        android:paddingHorizontal="40dp"
        android:textSize="15dp"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"/>

</RelativeLayout>